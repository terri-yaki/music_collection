<head>
  <link rel="icon" href="https://cdn.icon-icons.com/icons2/38/PNG/512/music_5261.png">
</head>

<h1>Artists</h1>

  <table class="table table-dark table-striped">
  <thead>
    <tr>
      <th>Artist Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @artists.each do |artist| %>
      <tr>

        <td><%= artist.art_name %></td>

                <!--
                  LOGIC:
                  for signed in user and is an admin,
                  they can edit and destroy items, appliable to other views.
                  Otherwise for visitors and non admin users can only see show button.
                -->


        <% if user_signed_in? == true && current_user.email == "admin@gmail.com" %>

          <td><%= link_to 'Show', artist %></td>
          <td><%= link_to 'Edit', edit_artist_path(artist) %></td>
          <td><%= link_to 'Destroy', artist, method: :delete, data: { confirm: 'Are you sure?' } %></td>

          <% else if user_signed_in? == false || current_user.email != "admin@gmail.com" %>

            <td><%= link_to 'Show', artist %></td>
            <% end %>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<br>
<% if user_signed_in? == true && current_user.email == "admin@gmail.com" %>
  <%= link_to 'New Artist', new_artist_path, class:"btn btn-outline-secondary"%>
<% end %>
<br><br>
<%= link_to "Back", songs_path, class:"btn btn-outline-secondary" %>
<br>
